#!/bin/bash

# Yabai mit sudo-Rechten starten (falls nötig)
sudo yabai --start-service

# Setze das Layout auf "bsp" (Binary Space Partitioning für deinen Bento Mode)
yabai -m config layout bsp

# Standard-Split Richtung (erste Spalte teilt vertikal, zweite horizontal)
yabai -m config split_ratio 0.5

# Windows automatisch anordnen (von links nach rechts)
yabai -m config auto_balance on

# Neue Fenster automatisch im Tiling Mode hinzufügen
yabai -m config window_placement first_child

# Spiegeln (horizontal & vertikal)
yabai -m config window_gap 18
yabai -m config top_padding 14
yabai -m config bottom_padding 14
yabai -m config left_padding 14
yabai -m config right_padding 14
