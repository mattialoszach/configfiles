#!/bin/bash

# Start yabai with sudo (if necessary)
sudo yabai --start-service

# Setze das Layout auf "bsp" (Binary Space Partitioning for Bento Mode)
yabai -m config layout bsp

# Standard-Split Direction (erste Spalte teilt vertikal, zweite horizontal)
yabai -m config split_ratio 0.5

# Rearrange windows automatically (left to right)
yabai -m config auto_balance on

# Add new windows (in tiling mode)
yabai -m config window_placement first_child

# Mirror (horizontal & vertikal)
yabai -m config window_gap 18
yabai -m config top_padding 14
yabai -m config bottom_padding 14
yabai -m config left_padding 14
yabai -m config right_padding 14
